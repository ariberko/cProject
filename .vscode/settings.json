{
    "files.associations": {
        "*.c": "c",
        "*.h": "c"
    },
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.hover": "default",
    "C_Cpp.configurationWarnings": "enabled",
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",  // Adjust this path based on your compiler
    "C_Cpp.default.intelliSenseMode": "gcc-x64",  // Adjust based on your environment (e.g., clang-x64)
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**"
    ],
    "C_Cpp.default.defines": [],
    "C_Cpp.default.cStandard": "c89",  // Adjust based on your project's standard (e.g., c99, c89)
    "C_Cpp.default.cppStandard": "c++11",  // Adjust based on your project's standard (if using C++)
    "C_Cpp.default.forcedInclude": [],
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],  // Set ruler at 80 characters, adjust as needed
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "C_Cpp.clangTidy.enabled": true,
    "C_Cpp.clangTidy.path": "/usr/bin/clang-tidy",  // Adjust this path based on your installation
    "C_Cpp.clangTidy.args": [
        "--checks=*,-clang-analyzer-alpha*,clang-analyzer-*"
    ],
    "C_Cpp.clangTidy.config": "",  // You can add a clang-tidy configuration string here
    "C_Cpp.clangTidy.fallbackConfig": "{ Checks: '*', WarningsAsErrors: '*' }",  // Example fallback configuration
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.runAutomatically": true, // Enables lightbulb for quick fixes
    "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,  // Use the build path for better results
    "C_Cpp.codeAnalysis.clangTidy.args": [
        "--fix-errors",  // Attempt to automatically fix errors
        "--format-style=file"  // Use formatting style from the .clang-format file if available
    ]
}
